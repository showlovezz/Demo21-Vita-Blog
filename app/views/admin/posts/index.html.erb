<div class="container-fluid">
	<div class="row">
		
		<div class="col-sm-2 col-md-2 col-lg-2 col-xl-1">
			<!-- 製作成表單，待處理 -->
			<div class="btn-group-vertical">
  				<%= link_to '文章首頁' , admin_posts_path, class: "btn btn-outline-warning" %>
  				<%= link_to '新增文章' , new_admin_post_path, class: "btn btn-outline-warning" %>
			</div>
		</div>

		<div class="col-sm-10 col-md-10 col-lg-10 col-xl-11">
			<table class="table table-hover">
				<thead class="thead-dark">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Title</th>
						<th scope="col">Content</th>
						<th scope="col">Edit</th>
						<th scope="col">Delete</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<th scope="row"><%= post.id %></th>
							<td><%= link_to post.title, admin_post_path(post) %></td>
							<td><%= post.content %></td>
							<td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
							<td><%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: "Are you sure ?"} %></td>
						</tr>
					<% end %>	
				</tbody>
			</table>
		</div>
	</div>
</div>
